<div class="row-fluid">
  <div class="widget_container">
    <div class="well nomargin">
      <div class="navbar navbar-static navbar_as_heading">
        <div class="navbar-inner">
          <div class="container" style="width: auto;">
            <a href="#" class="brand">Articles</a> 
        </div>
        </div>
      </div>
      <div class="subnav">
        <%= link_to 'New Article', new_article_path %>
        <form class="navbar-search pull-right" method="get" action="/articles">
          <input type="text" name="term" class="search-query" placeholder="Search">
          <input type="submit" value="Go">
        </form>
      </div>

      <table class="table smallfont">
        <thead>
          <tr>
            <td style="width:20px;"><input type="checkbox" id="chkbck" /></td>
            <td>标题</td>
            <td>Author</td>
            <td>Categories</td>
            <td>From</td>
            <td><i class="icon-large icon-comment-alt-1"></i></td>
            <td>Date</td>
          </tr>
        </thead>
        <tbody>
        <% @articles.each do |article| %>
          <tr>
          <td><input type="checkbox" class="chkbck" /></td>
          <td>
            <a href="/articles/<%= article.id %>" class="post_title"><%=raw article.title %></a>
            <div class="operation">
              <div class="btn-group">
                <%= link_to 'Show', article,:class=>"btn btn-small" %>
                <%= link_to 'Edit', edit_article_path(article),:class=>"btn btn-small"  %>
                <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn btn-small"  %>
              </div>
            </div>
          </td>
          <td><%= article.user.email %></td>
          <td><a href="#"><span class="label label-info"><%= article.category.name if article.category %></span></a></td>
          <td><%= article.from %></td>
          <td><span class="badge badge-info">0</span></td>
          <td><%= article.created_at %><br /></td>
        </tr>
      <% end %>
        </tbody>
      </table>
      <div class="subnav nobg">
        <%= paginate @articles %>
      </div>

    </div>
  </div>
</div>
