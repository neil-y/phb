<div class="widget_container">
  <div class="well nomargin">
    <ul class="breadcrumbs-custom in-well">
      <li><a href="#">Home</a></li>
      <li><a href="#">Contents</a></li>
      <li><a href="#">Pages</a></li>
      <li class="active">List</li>
    </ul>
  </div>
</div>	

<div class="row-fluid">
  <div class="widget_container">
    <div class="well nomargin">
      <div class="navbar navbar-static navbar_as_heading">
        <div class="navbar-inner">
          <div class="container" style="width: auto;">
            <a class="brand">Pages</a>
            <a class="btn pull-right" href="/categories/new">Add New</a>
          </div>
        </div>
      </div>
      <div class="subnav">
        <form class="navbar-search pull-right" action="">
          <input type="text" class="search-query" placeholder="Search">
        </form>
      </div>

      <table class="table smallfont">
        <thead>
          <tr>
            <td style="width:20px;"><input type="checkbox" id="chkbck" /></td>
            <td>Title</td>
            <td>Parent</td>
            <td><i class="icon-large icon-comment-alt-1"></i></td>
            <td>Date</td>
          </tr>
        </thead>
        <tbody>
        <% @categories.each do |category| %>
          <tr>
          <td><input type="checkbox" class="chkbck" /></td>
          <td>
            <a href="/categories/<%= category.id %>" class="post_title"><%= category.name %></a>
            <div class="operation">
              <div class="btn-group" >
                <%= link_to 'Show', category,:class=>"btn btn-small" %>
                <%= link_to 'Edit', edit_category_path(category),:class=>"btn btn-small"  %>
                <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn btn-small"  %>
              </div>
            </div>
          </td>
          <td><%= category.parent %></td>
          <td><span class="badge badge-warning"><%= category.articles.count %></span></td>
          <td><%= category.created_at %></td>
        </tr>
      <% end %>
        </tbody>
      </table>
      <div class="subnav nobg">
        <div class="pagination">
        </div>
      </div>
    </div>
  </div>
</div>

