<div class="row-fluid">
  <div class="widget_container">
    <div class="well">
      <h3>Users</h3>
      <a href="/users/new" class="pull-right">New</a>
      <ul class="users">
        <table class="table">
           <tr>
             <td>Name</td>
             <td>Role</td>
             <td></td>
             <td>signed up </td>
           </tr>
          <% @users.each do |user| %>
             <tr>
               <td><%= link_to user.name, user %></td>
               <td><% user.roles.each do | role | %><%= role.name %><% end %></td>
               <td></td>
               <td><%= user.created_at.to_date %></td>
             </tr>
          <% end %>
        </table>
    </div>
  </div>
</div>
